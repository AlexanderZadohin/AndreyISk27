<Page x:Class="AndreyISk27.View.Pages.ProposalMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AndreyISk27.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="1306"
      Title="ProposalMainPage">

    <Grid>
        <Button x:Name="AddProposalBtn" Content="Добавить предложение" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 20 0 0" Height="50" Width="200"/>
        <DataGrid x:Name="ProposalDg" Margin="25 100 25 25" BorderBrush="Black" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Мои просьбы" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Предложение" Binding="{Binding Text}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
